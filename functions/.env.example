# Firebase Cloud Functions Environment Variables
# Copy this file to .env and fill in actual values
# IMPORTANT: .env is gitignored - NEVER commit secrets!

# ========================================
# TRAIN STATUS API CREDENTIALS
# ========================================
# Entur API (https://developer.entur.org/)
ENTUR_API_KEY=your_entur_api_key_here
ENTUR_CLIENT_NAME=TogRefusjon

# Bane NOR API (when available)
# BANE_NOR_API_KEY=your_bane_nor_api_key_here
# BANE_NOR_API_URL=https://api.banenor.no

# ========================================
# OPERATOR-SPECIFIC APIs (if needed)
# ========================================
# VY_API_KEY=your_vy_api_key_here
# SJ_API_KEY=your_sj_api_key_here
# GO_AHEAD_API_KEY=your_go_ahead_api_key_here

# ========================================
# EMAIL SERVICE (for notifications & claim submission)
# ========================================
# SendGrid (recommended for Norway)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@togrefusjon.no
SENDGRID_FROM_NAME=Tog Refusjon

# ========================================
# ENCRYPTION & STORAGE
# ========================================
# GCP KMS for PII encryption
GCP_KMS_KEY_RING=togrefusjon-pii
GCP_KMS_KEY_NAME=pii-encryption-key
GCP_KMS_LOCATION=europe-north1

# Storage bucket for encrypted PII
PII_STORAGE_BUCKET=togrefusjon-pii-encrypted

# ========================================
# MONITORING & OBSERVABILITY
# ========================================
# Sentry for error tracking (optional but recommended)
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=development

# ========================================
# FEATURE FLAGS & RUNTIME CONFIG
# ========================================
# Enable/disable features per environment
ENABLE_AUTO_CLAIM_SUBMISSION=false
ENABLE_DELAY_TRACKING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# ========================================
# RATE LIMITING & BACKOFF
# ========================================
# API call limits to avoid rate limiting
MAX_CONCURRENT_STATUS_CHECKS=10
STATUS_CHECK_RETRY_ATTEMPTS=3
STATUS_CHECK_BACKOFF_MS=1000

# ========================================
# GDPR & DATA RETENTION
# ========================================
# Days to retain data after claim closure
DATA_RETENTION_DAYS=365
PII_DELETION_BATCH_SIZE=100

# ========================================
# WEBHOOK SECRETS (if using webhooks)
# ========================================
# ENTUR_WEBHOOK_SECRET=your_webhook_secret_here
# OPERATOR_WEBHOOK_SECRET=your_operator_webhook_secret_here
